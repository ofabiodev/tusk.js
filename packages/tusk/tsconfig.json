{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "rootDir": "src",
    "outDir": "build",
    "emitDeclarationOnly": false,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": "./src",
  },

  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
