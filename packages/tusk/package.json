  "homepage": "https://tusk.js.org",
  "author": {
    "name": "ofabiodev",
    "url": "https://ofabio.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ofabiodev/tusk.git",
    "directory": "packages/tusk"
  },
  "license": "MIT",
  "devDependencies": {
    "poku": "^3.0.1",
